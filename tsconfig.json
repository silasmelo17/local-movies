{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES6"],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@Config/*": ["./config/*"],
      "@Controllers/*": ["./controller/*"],
      "@Middlewares/*": ["./middlewares/*"],
      "@Routes/*": ["./routes/*"],
      "@Types/*": ["./types/*"],
      "@Util/*": ["./util/*"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}